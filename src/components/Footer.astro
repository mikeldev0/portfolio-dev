---
import GitHubIcon from "../icons/GitHubIcon.astro"

const currentYear = new Date().getFullYear()
---

<footer class="text-gray-800 dark:text-gray-200 rounded-xl mt-10" itemscope itemtype="https://schema.org/WPFooter">
  <div
    class="rounded-lg w-full max-w-screen-xl mx-auto flex flex-col md:flex-row items-center justify-center md:justify-between py-4 text-center md:text-left px-4"
  >
    <span class="text-sm text-zinc-800/90 dark:text-zinc-200/90 mb-4 md:mb-0" copyrightHolder="copyrightHolder">
      © {currentYear}
      <a
        href="https://mikeldev.com/"
        class="transition hover:text-purple-500 dark:hover:text-purple-400 dark:text-white"
        itemprop="publisher"
        >Mikel Echeverria</a
      >. <span data-i18n="footer.rights">Todos los derechos reservados</span>
    </span>
    <nav aria-label="Footer Navigation" class="w-full md:w-auto">
      <ul
        class="flex flex-col md:flex-row items-center justify-center gap-4 text-sm font-medium dark:text-white/90"
      >
        <li>
          <a
            href="https://github.mikeldev.com//portfolio-dev"
            class="transition hover:text-purple-500 dark:hover:text-purple-400 flex items-center gap-x-1"
            itemprop="sameAs"
            > <GitHubIcon class="size-4" /> <span data-i18n="footer.source">Código fuente</span>
          </a>
        </li>
        <li>
          <a
            href="/#sobre-mi"
            class="transition hover:text-purple-500 dark:hover:text-purple-400"
            itemprop="about"
            ><span data-i18n="footer.about">Sobre mí</span></a
          >
        </li>
        <li>
          <a
            id="contacto"
            href="mailto:mikel@mikeldev.com"
            class="transition hover:text-purple-500 dark:hover:text-purple-400"
            itemprop="email"
            ><span data-i18n="footer.contact">Contacto</span></a
          >
        </li>
      </ul>
    </nav>
  </div>
</footer>
